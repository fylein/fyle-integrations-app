{
  "name": "fyle-transloco-helper",
  "displayName": "Fyle Transloco Helper",
  "description": "View, edit and manage i18n translation values easily with live preview and many more.",
  "version": "1.0.0",
  "publisher": "Fyle",
  "private": true,
  "icon": "images/transloco.png",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onLanguage:html",
    "onLanguage:typescript"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "Fyle Transloco Helper",
      "properties": {
        "fyle-transloco.enableValidation": {
          "type": "boolean",
          "default": true,
          "description": "Enable validation of unused translations using fast search (can be disabled for performance)"
        }
      }
    },
    "commands": [
      {
        "command": "fyle-transloco.refreshTranslations",
        "title": "Refresh Translations Cache",
        "category": "Fyle Transloco"
      },
      {
        "command": "fyle-transloco.showTranslationFiles",
        "title": "Show Translation Files Status",
        "category": "Fyle Transloco"
      },
      {
        "command": "fyle-transloco.editTranslation",
        "title": "Edit Translation",
        "category": "Fyle Transloco"
      },
      {
        "command": "fyle-transloco.deleteTranslation",
        "title": "Delete Translation",
        "category": "Fyle Transloco"
      },
      {
        "command": "fyle-transloco.toggleTranslationPreview",
        "title": "Toggle Translation Preview",
        "category": "Fyle Transloco"
      },
      {
        "command": "fyle-transloco.analyzeTranslations",
        "title": "Analyze Translation Coverage",
        "category": "Fyle Transloco"
      },
      {
        "command": "fyle-transloco.showMissingTranslations",
        "title": "Show Missing Translations",
        "category": "Fyle Transloco"
      },
      {
        "command": "fyle-transloco.createTranslation",
        "title": "Create Translation with Suggestions",
        "category": "Fyle Transloco"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "build": "npm run compile && npx @vscode/vsce package",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "dependencies": {
    "@vscode/ripgrep": "^1.15.9"
  },
  "devDependencies": {
    "@types/vscode": "^1.74.0",
    "@types/node": "16.x",
    "typescript": "^4.9.4"
  },
  "repository": {
  "type": "git",
  "url": "https://github.com/fylein/fyle-integration-scripts.git"
  }
}
